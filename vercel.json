{
  "version": 2,
  "builds": [
    { 
      "src": "api/attack.py", 
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb"
      }
    },
    { 
      "src": "public/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    { 
      "src": "/api/attack", 
      "dest": "/api/attack.py",
      "methods": ["POST", "OPTIONS"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/public/$1" 
    }
  ]
}
